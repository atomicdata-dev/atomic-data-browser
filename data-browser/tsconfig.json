{
  "extends": "../tsconfig.build.json",
  "compilerOptions": {
    "composite": true,
    // We overwrite this so we don't have to use `.js` extensions in imports
    "moduleResolution": "node",
    "lib": [
      "ES6",
      "ES7",
      "ESNext",
      "DOM"
    ],
    "outDir": "./dist",
    "strictNullChecks": true,
  },
  "include": [
    "./src",
  ],
  "references": [
    {
      "path": "../lib"
    },
    {
      "path": "../react"
    }
  ]
}
