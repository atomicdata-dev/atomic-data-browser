    "@esm-bundle/chai": "4.3.4",
    "@testing-library/react": "12.1.2",
    "@types/chai": "^4.2.22",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
